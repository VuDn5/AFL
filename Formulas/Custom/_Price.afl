function T3(price,periods) //AMA-based
{
    s = 0.618;
    periods = 2/(periods+1);
    e1=AMA(price,periods);
    e2=AMA(e1,Periods);
    e3=AMA(e2,Periods);
    e4=AMA(e3,Periods);
    e5=AMA(e4,Periods);
    e6=AMA(e5,Periods);
    c1=-s*s*s;
    c2=3*s*s+3*s*s*s;
    c3=-6*s*s-3*s-3*s*s*s;
    c4=1+3*s+s*s*s+3*s*s;
    Ti3=c1*e6+c2*e5+c3*e4+c4*e3;
    return ti3;
}
 
